<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/activity_vertical_margin"
    app:cardElevation="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:id="@+id/a">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="adana"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/txtkalkis"
                android:textSize="22sp"
                android:textColor="#000000"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/img"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_weight="1.2"
                android:src="@drawable/ic_baseline_trending_flat_24"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="adana"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/txtvaris"
                android:textSize="22sp"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/a"
            android:id="@+id/c">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txttarih"
                android:text="12/12/2020"
                android:layout_weight="0.3"
                android:textColor="#000000"
                android:textSize="23sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txtfiyat"
                android:layout_weight="1"
                android:textSize="25sp"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:textColor="#000000"
                android:text="58"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/d"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_remove_24"
            android:layout_below="@id/c"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtaciklama"
            android:gravity="fill_horizontal"
            android:layout_below="@id/d"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:id="@+id/txtid"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/txtaciklama"
            android:id="@+id/b">
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="33dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:innerRadius="0dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:id="@+id/imgprofilresmi"
                    android:src="@drawable/addphoto"
                    android:clickable="true"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:textSize="22sp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:text="Cuma Ali Ã‡amkerten"
                android:id="@+id/txtadsoyad"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>

